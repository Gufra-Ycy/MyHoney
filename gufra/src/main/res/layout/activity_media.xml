<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.gufra.Activity.MediaActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_startRecord"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/radius_drawable_back"
        android:text="开始录音"/>

    <Button
        android:id="@+id/btn_stopRecord"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/radius_drawable_back"
        android:text="停止录音"/>
    <TextView
        android:id="@+id/txt_sound_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="声音大小"
        android:textSize="20sp"/>
    <com.gufra.View.AudioView
        android:id="@+id/view_wave"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
</LinearLayout>
